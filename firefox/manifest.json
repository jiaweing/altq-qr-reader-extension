{
  "manifest_version": 2,
  "name": "QR Code Reader",
  "version": "1.0",
  "icons": {
    "128": "icon.png"
  },
  "description": "Offline QR code reader with region selection",
  "applications": {
    "gecko": {
      "id": "qr-reader@example.com",
      "strict_min_version": "60.0"
    }
  },
  "commands": {
    "activate-qr-select": {
      "suggested_key": {
        "default": "Alt+Q"
      },
      "description": "Activate QR code selection"
    }
  },
  "permissions": ["clipboardWrite", "activeTab", "commands"],
  "background": {
    "scripts": ["background.js"]
  },
  "web_accessible_resources": ["fonts/*.woff2"],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["jsQR.js", "content.js"],
      "css": ["styles.css"]
    }
  ]
}
