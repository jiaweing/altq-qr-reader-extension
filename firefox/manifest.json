{
  "manifest_version": 2,
  "name": "Offline & Local QR Code Reader",
  "version": "1.0.4",
  "icons": {
    "128": "../src/icon.png"
  },
  "description": "Read QR codes directly from web pages without requiring an internet connection.",
  "applications": {
    "gecko": {
      "id": "qr-reader@example.com",
      "strict_min_version": "60.0"
    }
  },
  "commands": {
    "activate-qr-select": {
      "suggested_key": {
        "default": "Alt+Q"
      },
      "description": "Activate QR code selection"
    }
  },
  "permissions": ["clipboardWrite", "activeTab", "commands"],
  "background": {
    "scripts": ["background.js"]
  },
  "web_accessible_resources": ["../src/fonts/*.woff2"],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["../src/jsQR.js", "../src/content.js"],
      "css": ["../src/styles.css"]
    }
  ]
}
